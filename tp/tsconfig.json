{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "lib": ["dom", "ESNext", "ES6"],
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": [
      "*.ts"
    ],
}
  